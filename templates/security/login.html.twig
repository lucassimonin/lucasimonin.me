{% extends 'security/layout.html.twig' %}

{% block content %}
    {% if is_granted('ROLE_ADMIN') %}
        <script>
            document.location.href="{{ path('admin_dashboard') }}"
        </script>
    {% endif %}
    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ error.message|trans }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <form class="form-signin" action="{{ path('login') }}" method="post">
        <div class="text-center mb-4">
            <img class="mb-4" src="{{ asset('images/admin/logo.png') }}" alt="logo" width="50" height="50">
        </div>
        <div class="form-label-group">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autofocus="autofocus" autocomplete="on" placeholder="{{ 'admin.user.form.email'|trans({}, 'app') }}" />
            <label for="inputEmail">{{ 'admin.user.form.email'|trans({}, 'app') }}</label>
        </div>
        <div class="form-label-group">
            <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'admin.user.form.password'|trans({}, 'app') }}" />
            <label for="inputPassword">{{ 'admin.user.form.password'|trans({}, 'app') }}</label>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'admin.common.remember_me'|trans({}, 'app') }}
            </label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}" />
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'admin.common.login.title'|trans({}, 'app') }}</button>
    </form>
{% endblock %}
